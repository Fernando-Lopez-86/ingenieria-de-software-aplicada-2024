        <h1>Crear Nuevo Pedido</h1>
        <form action="/pedidos/create" method="post">
          <div>
            <label for="TIPO">TIPO:</label>
            <input type="text" id="TIPO" name="TIPO" required>
          </div>
          <div>
            <label for="CLIENTE">CLIENTE:</label>
            <input type="text" id="CLIENTE" name="CLIENTE" required>
          </div>
          <div>
            <label for="NROPED">NROPED:</label>
            <input type="text" id="NROPED" name="NROPED" required>
          </div>
          <div>
            <label for="NROREAL">NROREAL:</label>
            <input type="text" id="NROREAL" name="NROREAL" required>
          </div>
          <div>
            <label for="ESTADOSEG">ESTADOSEG:</label>
            <input type="text" id="ESTADOSEG" name="ESTADOSEG" required>
          </div>
          <div>
            <label for="CODIGO">CODIGO:</label>
            <input type="text" id="CODIGO" name="CODIGO" required>
          </div>
          <div id="items">
            <div>
              <label for="ITEM">ITEM:</label>
              <input type="text" name="items[0][ITEM]" required>
            </div>
          </div>
          <button type="button" onclick="addItem()">Añadir otro artículo</button>
          <button type="submit">Crear Pedido</button>
        </form>
        <script>
          let itemIndex = 1;
          function addItem() {
            const newItem = document.createElement('div');
            newItem.innerHTML = `
              <label for="ITEM">ITEM:</label>
              <input type="text" name="items[${itemIndex}][ITEM]" required>
            `;
            document.getElementById('items').appendChild(newItem);
            itemIndex++;
          }
        </script>







